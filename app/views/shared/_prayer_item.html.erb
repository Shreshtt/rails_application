<li id="<%= prayer_item.id %>">
  <%= link_to gravatar_for(prayer_item.user), prayer_item.user %>
    <span class="user">
      <%= link_to prayer_item.user.name, prayer_item.user %>
    </span>
    <span class="content"><%= prayer_item.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(prayer_item.created_at) %> ago.
    </span>
  <% if current_user?(prayer_item.user) %>
    <%= link_to "delete", prayer_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: prayer_item.content %>
  <% end %>
</li>