<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.prayers.any? %>
      <h3>Prayers (<%= @user.prayers.count %>)</h3>
      <ol class="prayers">
        <%= render @prayers %>
      </ol>
      <%= will_paginate @prayers %>
    <% end %>
  </div>  
</div>
